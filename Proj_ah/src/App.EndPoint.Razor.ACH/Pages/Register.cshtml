@page
@using App.EndPoint.Razor.ACH.Pages

@model RegisterModel
@{
    Layout = "_Layout";
}

<section class="gray min-vh-100 d-flex align-items-center justify-content-center" style="padding-top: 50px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-6 col-lg-8 col-md-10">
                <div class="card shadow-lg border-0 p-4 rounded-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold text-primary">ثبت نـام</h4>
                    </div>

                    <form class="submit-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger p-3 rounded bg-light" role="alert"></div>

                        <!-- First Name -->
                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.FirstName" class="form-label fw-semibold">نام</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-person"></i></span>
                                <input type="text" asp-for="@Model.AccountRegister.FirstName" class="form-control" placeholder="نام">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.FirstName" class="text-danger"></span>
                        </div>

                        <!-- Last Name -->
                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.LastName" class="form-label fw-semibold">نام خانوادگی</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-person"></i></span>
                                <input type="text" asp-for="@Model.AccountRegister.LastName" class="form-control" placeholder="نام خانوادگی">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.LastName" class="text-danger"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.Email" class="form-label fw-semibold">ایمیل</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-envelope"></i></span>
                                <input type="email" asp-for="@Model.AccountRegister.Email" class="form-control" placeholder="ایمیل">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.Email" class="text-danger"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="@Model.AccountRegister.Password" class="form-label fw-semibold">رمز عبور</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-lock"></i></span>
                                <input type="password" asp-for="@Model.AccountRegister.Password" class="form-control" placeholder="رمز عبور">
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.Password" class="text-danger"></span>
                        </div>

                        <!-- Role Selection -->
                        <div class="mb-3">
                            <label class="form-label fw-semibold">انتخاب نقش</label>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="@Model.AccountRegister.Role" value="Expert" id="roleExpert">
                                <label class="form-check-label" for="roleExpert">متخصص</label>
                            </div>
                            <div class="form-check">
                                <input class="form-check-input" type="radio" asp-for="@Model.AccountRegister.Role" value="Customer" id="roleCustomer" checked>
                                <label class="form-check-label" for="roleCustomer">مشتری</label>
                            </div>
                            <span asp-validation-for="@Model.AccountRegister.Role" class="text-danger"></span>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-primary w-100 rounded-pill">ثبت نام</button>

                        <div class="text-center mt-3">
                            <p>آیا قبلا ثبت نام کرده‌اید؟ <a asp-area="Account" asp-page="/Login" class="text-decoration-none text-success">ورود</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>


<style>
    .gray {
        background-color: #f8f9fa;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .rounded-4 {
        border-radius: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .rounded-pill {
        border-radius: 50rem;
    }

    .input-group-text {
        background-color: #007bff;
        color: white;
        border: none;
        padding-left: 0.75rem;
        padding-right: 0.75rem;
    }

    .form-label {
        margin-bottom: 0.5rem;
    }

    .form-check-input:checked {
        background-color: #007bff;
        border-color: #007bff;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('.form-check-input').click(function () {
                $('.form-check-input').not(this).prop('checked', false);
            });
        });
    </script>
}
