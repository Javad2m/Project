@page
@model App.EndPoint.Razor.ACH.Pages.ListServiceModel
@{
}



<section class="gray py-5">
    <div class="container">
        <div class="row">
            <!-- Home Services Start -->
            <div class="col-xl-9 col-lg-8 col-md-12 col-sm-12" id="hotels">
                <div class="row justify-content-center">
                    @foreach (var subcategory in Model.Service)
                    {
                        <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-6 mb-3">
                            <div class="card h-auto shadow-sm text-center">
                                <!-- تصویر -->
                                @if (!string.IsNullOrEmpty(subcategory.ImagePath))
                                {
                                    <img src="@subcategory.ImagePath" class="card-img-top img-fluid p-2" alt="Category Image" style="height: 120px; object-fit: cover;">
                                }
                                else
                                {
                                    <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 120px;">
                                        <span class="text-muted">بدون عکس</span>
                                    </div>
                                }

                                <div class="card-body p-2">
                                    <h6 class="card-title text-primary mb-1">@subcategory.Title</h6>
                                    <p class="text-muted small mb-1">دسته بندی: @subcategory.CategoryName</p>

                                    <a asp-page="/Service" asp-route-id="@subcategory.Id" class="btn btn-sm btn-primary w-100">جزئیات</a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>


