@page
@model App.EndPoint.Razor.ACH.Pages.SubCategoryModel
@{
}




<section class="gray py-5">
    <div class="container">
        <div class="row">
            <!-- Home Services Start -->
            @foreach (var categoryGroup in Model.SubCategories.GroupBy(subcategory => subcategory.CategoryName))
            {
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 mb-4">
                    <!-- باکس هر دسته -->
                    <div class="card shadow-sm">
                        <div class="card-header text-center bg-primary text-white">
                            <h3 class="mb-0">@categoryGroup.Key</h3> <!-- نمایش نام دسته -->
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var subcategory in categoryGroup)
                                {
                                    <div class="col-xl-3 col-lg-4 col-md-4 col-sm-6 col-6 mb-3">
                                        <div class="card shadow-sm">
                                            <a href="/ListService?subCategory=@subcategory.Id" class="card-body text-center">
                                                <h5 class="card-title">@subcategory.Title</h5>
                                            @*     <p class="card-text">دسته بندی: @subcategory.CategoryName</p> *@
                                            </a>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>




