@page
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model App.EndPoint.Razor.ACH.Account.Pages.LoginModel
@{
}
@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}



<section class="gray min-vh-100 d-flex align-items-center justify-content-center" style="padding-top: 50px;">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-xl-5 col-lg-8 col-md-10">
                <div class="card shadow-lg border-0 p-4 rounded-4">
                    <div class="text-center mb-4">
                        <h4 class="fw-bold text-primary">ورود به حساب</h4>
                    </div>

                    <form class="submit-form" method="post">
                        <div class="mb-3">
                            <label asp-for="@Model.AccountLogin.Email" class="form-label fw-semibold">نام کاربری</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-person"></i></span>
                                <input type="text" asp-for="@Model.AccountLogin.Email" class="form-control">
                            </div>
                            <span asp-validation-for="@Model.AccountLogin.Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="@Model.AccountLogin.Password" class="form-label fw-semibold">رمز عبور</label>
                            <div class="input-group">
                                <span class="input-group-text border-0"><i class="bi bi-lock"></i></span>
                                <input type="password" asp-for="@Model.AccountLogin.Password" class="form-control">
                            </div>
                            <span asp-validation-for="@Model.AccountLogin.Password" class="text-danger"></span>
                        </div>

                        <button type="submit" class="btn btn-primary w-100 rounded-pill">ورود</button>

                        <div class="text-center mt-3">
                            <p>آیا تا به حال ثبت نام نکرده‌اید؟ <a asp-page="./Register" class="text-decoration-none text-success">ثبت نام</a></p>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
    .gray {
        background-color: #f8f9fa;
    }

    .card {
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .rounded-4 {
        border-radius: 1rem;
    }

    .btn-primary {
        background-color: #007bff;
        border: none;
    }

        .btn-primary:hover {
            background-color: #0056b3;
        }

    .rounded-pill {
        border-radius: 50rem;
    }

    .input-group-text {
        background-color: #007bff;
        color: white;
    }

    .form-label {
        margin-bottom: 0.5rem;
    }

    .input-group-text {
        border: none;
        padding-left: 0.75rem;
        padding-right: 0.75rem;
    }
</style>
