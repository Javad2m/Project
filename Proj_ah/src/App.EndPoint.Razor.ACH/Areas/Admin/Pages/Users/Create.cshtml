@* @page
@model Achar.Endpoint.Razor.Areas.Admin.Pages.Users.CreateModel
@{
    ViewData["Title"] = "آچار > مدیریت کاربران > ایجاد کاربران";
}

<div class="col-lg-12">
    <div class="portlet box shadow">
        <div class="portlet-heading">
            <div class="portlet-title">
                <h3 class="title">
                    ایجاد کاربر جدید
                </h3>
            </div><!-- /.portlet-title -->
        </div><!-- /.portlet-heading -->
        <div class="portlet-body">
            <form enctype="multipart/form-data" id="simple-form" role="form" method="post">
                <div class="form-body">
                    <!-- UserName Field -->
                    <div class="form-group mb-4">
                        <label for="UserName" class="fw-semibold">نام کاربری</label>
                        <div class="input-group">
                            <input asp-for="User.UserName" class="form-control" type="text" placeholder="نام کاربری" id="UserName" required="نام کاربری اجباری است">
                        </div>
                    </div>

                    <!-- Password Field -->
                    <div class="form-group mb-4">
                        <label for="Password" class="fw-semibold">کلمه عبور</label>
                        <div class="input-group">
                            <input asp-for="User.Password" class="form-control" type="password" placeholder="کلمه عبور" id="Password" required="رمز عبور اجباری است">
                        </div>
                    </div>

                    <!-- City Selection (This will be hidden for Admin role) -->
                    <div class="form-group mb-4" id="citySelection">
                        <label for="CityId" class="fw-semibold">انتخاب شهر محل سکونت</label>
                        <select class="form-select" asp-for="@Model.User.CityId" id="CityId" required>
                            @foreach (var item in Model.Cities)
                            {
                                <option value="@item.Id">@item.Title</option>
                            }
                        </select>
                    </div>

                    <div class="sign-controls form-group">
                        <div class="custom-control custom-checkbox">
                            <input id="IsVisitor" asp-for="@Model.User.IsExpert" type="checkbox" class="custom-control-input">
                            <label class="custom-control-label" for="IsVisitor">متخصص هستید؟</label>
                        </div>
                    </div>



                    <!-- Form Actions -->
                    <div class="form-actions d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">
                            <i class="icon-check"></i>
                            ذخیره
                        </button>
                        <a asp-page="Index" class="btn btn-warning">
                            بازگشت
                        </a>
                    </div>
                </div><!-- /.form-body -->
            </form>
        </div><!-- /.portlet-body -->
    </div><!-- /.portlet -->
</div><!-- /.col-lg-12 -->

<script>
    // This function will hide/show the city selection field based on whether 'Admin' role is selected
    function toggleCityField() {
        var isAdminChecked = document.getElementById('admin').checked;
        var cityField = document.getElementById('citySelection');

        if (isAdminChecked) {
            cityField.style.display = 'none'; // Hide city field if Admin role is selected
        } else {
            cityField.style.display = 'block'; // Show city field if Admin role is not selected
        }
    }
</script>
 *@